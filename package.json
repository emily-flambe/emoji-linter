{
  "name": "emoji-linter",
  "version": "1.0.2",
  "description": "CLI tool and GitHub Action for detecting and removing basic Unicode emojis from source code",
  "main": "src/index.js",
  "bin": {
    "emoji-linter": "./bin/emoji-linter.js"
  },
  "scripts": {
    "build": "ncc build src/index.js -o dist --source-map --license licenses.txt",
    "test": "jest",
    "lint": "eslint src/"
  },
  "keywords": [
    "github-action",
    "emoji",
    "linter",
    "validation",
    "commit-message",
    "cli",
    "code-quality",
    "unicode"
  ],
  "author": "Emily Cogsdill",
  "license": "MIT",
  "homepage": "https://github.com/emily-flambe/emoji-linter#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/emily-flambe/emoji-linter.git"
  },
  "bugs": {
    "url": "https://github.com/emily-flambe/emoji-linter/issues"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "ignore": "^7.0.5",
    "minimatch": "^9.0.3"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
