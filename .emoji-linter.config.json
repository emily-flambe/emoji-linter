{
  "ignore": {
    "files": [
      "**/*.md",
      "docs/**",
      "test/fixtures/**",
      "**/node_modules/**",
      ".git/**",
      "dist/**",
      "build/**",
      "coverage/**",
      "**/*.min.js",
      "**/*.map",
      ".temp/**",
      ".github/**",
      "**/.venv/**",
      "**/venv/**",
      "**/*.py[co]",
      "tests/**",
      ".project/**"
    ],
    "emojis": ["🚨", "⚠️"],
    "patterns": ["console.log.*🚀"]
  },
  "detection": {
    "unicode": true,
    "shortcodes": true,
    "sequences": true,
    "skinTones": true
  },
  "output": {
    "format": "table",
    "showContext": true,
    "maxContextLines": 2
  },
  "cleanup": {
    "preserveWhitespace": false,
    "createBackup": false
  }
}
